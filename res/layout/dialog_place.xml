<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.parse.ParseImageView
            android:id="@+id/dialog_place_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/dialog_place_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="title"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_place_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="descr"
            android:textColor="@color/secondary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_place_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="place"
            android:textColor="@color/secondary"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_place_navigate_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/primary"
            android:padding="16dp"
            android:text="Navigovať"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialog_place_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/secondary"
            android:padding="16dp"
            android:text="Zavrieť"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>