<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_event_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="title" />

        <TextView
            android:id="@+id/dialog_event_descr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="descr" />

        <TextView
            android:id="@+id/dialog_event_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="date" />

        <TextView
            android:id="@+id/dialog_event_place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="place" />

        <Button
            android:id="@+id/dialog_event_add_calendar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add to calendar" />

        <Button
            android:id="@+id/dialog_event_navigate_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="X" />
    </LinearLayout>

</ScrollView>